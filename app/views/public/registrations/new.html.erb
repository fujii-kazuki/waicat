<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, placeholder: '例）猫山太郎' %>
  </div>

  <div class="field">
    <%= f.label :postal_code %><br />
    <%= f.text_field :postal_code, placeholder: '例）1234567' %>
  </div>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address, placeholder: '例）大阪府大阪市中央区難波◯丁目1-1' %>
  </div>

  <div class="field">
    <%= f.label :telephone_number %><br />
    <%= f.telephone_field :telephone_number, placeholder: '例）09012345678' %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email", placeholder: '例）sample@sample.jp' %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "確定" %>
  </div>
<% end %>

<p>アカウントをお持ちの方は<%= link_to 'こちら', new_user_session_path %></p>