<div class="container">
  <h2 class="heading heading--2">ログイン</h2>

  <%= form_with model: @user, url: user_session_path, class: 'form sign-in__form' do |f| %>
    <div class="form__container">
      <div class="sign-in__form-grid">
        <p class="form__text">アカウントをお持ちでない方は<%= link_to 'こちら', new_user_registration_path, class: 'form__link' %></p>

        <div>
          <%= f.label :email, class: 'form__label' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'text-field' %>
        </div>

        <div>
          <%= f.label :password, class: 'form__label' %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'text-field' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div>
            <%= f.check_box :remember_me, class: 'checkbox' %>
            <%= f.label :remember_me, class: 'form__label' %>
          </div>
        <% end %>
      </div>

      <div class="form__flex">
        <%= button_tag 'ログイン', type: 'submit', class: 'sign-in__form-log-in-button' %>
      </div>
    </div>
  <% end %>
</div>
